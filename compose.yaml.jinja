services:
  {{service_name}}:
    build:
      context: .
      target: dev
    image: {{service_name}}:dev
    ports:
      - "{{service_port}}:8000"
    volumes:
      - .:/app
      - /app/.venv
    develop:
      watch:
        - action: sync
          path: .
          target: /app
          ignore:
            - .venv/
        - action: rebuild
          path: ./uv.lock